<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border6_admin"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:id="@+id/tvUserName"
            android:padding="5dp"
            android:gravity="start"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:layout_column="2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call Date"
                android:padding="5dp"
                android:gravity="start"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/date_admin"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6th Aug 2018"
                android:padding="5dp"
                android:gravity="start"
                android:id="@+id/tvDate"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call Time"
                android:padding="5dp"
                android:gravity="start"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_column="2"
                android:drawableLeft="@drawable/timee_admin"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 hours"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/tvCallTime"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_column="2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call Duration"
                android:padding="5dp"
                android:gravity="start"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_column="2"
                android:drawableLeft="@drawable/timee_admin"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 hours"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/tvDuration"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_column="2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call Location"
                android:padding="5dp"
                android:gravity="start"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_column="2"
                android:drawableLeft="@drawable/s2_admin"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 hours"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/tvLocation"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_column="2"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Url"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_gravity="center"
            android:id="@+id/tvUrl"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_column="2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 hours"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_gravity="center"
            android:id="@+id/tvFileName"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_column="2"
            />

    </LinearLayout>
</LinearLayout>