<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:animateLayoutChanges="true"
    android:id="@+id/container"
    android:background="@drawable/border1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <android.support.v7.widget.Toolbar
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assign Work"
                android:gravity="center"
                android:id="@+id/txtclose"
                android:textStyle="bold"
                
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/exit_admin"
                android:drawablePadding="8dp"
                android:background="@android:color/transparent"
                android:textSize="16dp"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter all the work details"
            android:textColor="#123456"
            android:padding="5dp"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <Spinner
                android:id="@+id/spinnerDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
            <EditText
                android:singleLine="true"
                android:visibility="gone"
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border2_admin"
                android:gravity="center"
                android:hint="Username"
                android:inputType="textCapWords|textCapSentences"
                android:padding="7dp"
                android:textSize="14dp" />

            <EditText
                android:singleLine="true"
                android:id="@+id/etWorkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border2_admin"
                android:gravity="center"
                android:hint="Work Title"
                android:padding="7dp"
                android:textSize="14dp" />
            <EditText
                android:singleLine="true"
                android:id="@+id/etDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border2_admin"
                android:gravity="center"
                android:hint="Type of work"
                android:padding="7dp"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tvDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border2_admin"
                android:gravity="center"
                android:hint="Deadline"
                android:padding="7dp"
                android:textSize="14dp" />

            <EditText
                android:singleLine="true"
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border2_admin"
                android:gravity="center"
                android:hint="Company Name"
                android:padding="7dp"
                android:textSize="14dp" />
            <EditText
                android:singleLine="true"
                android:id="@+id/etCompanyAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border2_admin"
                android:gravity="center"
                android:hint="Company Address with Phone number"
                android:padding="7dp"
                android:textSize="14dp" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/border3_admin"
                android:text="Assign Work"
                android:textSize="16sp"
                android:id="@+id/btnAssignWork"
                android:textColor="#ffffff"
                />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>