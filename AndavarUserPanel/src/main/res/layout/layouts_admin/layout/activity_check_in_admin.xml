<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient2_admin"
    android:layout_height="match_parent"
    tools:context=".admin.CheckINActivityAdmin">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="goBack"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Task Details"
                android:textSize="19dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/back_admin"
                />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:textSize="20dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <cn.jzvd.JzvdStd
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="200dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:hint="Type to search"
            android:completionThreshold="1"
            android:layout_weight="1"
            android:id="@+id/suggestion_box"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="X"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_weight="5"
            android:onClick="cancelSearch"
            android:textStyle="bold|italic" />
    </LinearLayout>
    <ListView
        android:id="@+id/lvCheckIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
